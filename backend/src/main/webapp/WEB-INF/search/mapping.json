{
    "entity":{
        "dynamic_templates":[
            {
                "facet_template":{
                    "mapping":{
                        "type":"keyword"
                    },
                    "match":"facet*"
                }
            },
            {
                "all_template":{
                    "mapping":{
                        "type":"text",
                        "index_options":"positions",
                        "copy_to":"searchableContent"
                    },
                    "match":"*",
                    "path_unmatch":"editorSection.*",
                    "match_mapping_type":"string"
                }
            },
            {
                "editor_template":{
                    "mapping":{
                        "type":"text",
                        "index_options":"positions",
                        "copy_to":"searchableEditorContent"
                    },
                    "path_match":"editorSection.*",
                    "match_mapping_type":"string"
                }
            }
        ],
        "properties":{
            "datasetGroup":{
                "type":"keyword"
            },
            "@id":{
                "type":"keyword"
            },
            "entityId":{
                "type":"long"
            },
            "internalId":{
                "type":"long"
            },
            "lastModified":{
                "type":"long"
            },
            "subtitle":{
                "type":"text",
                "fields":{
                    "sort":{
                        "type":"icu_collation_keyword",
                        "language":"de",
                        "country":"DE",
                        "numeric":true
                    }
                }
            },
            "thumbnailId":{
                "type":"long"
            },
            "title":{
                "type":"text",
                "fields":{
                    "sort":{
                        "type":"keyword"
                    }
                }
            },
            "type":{
                "type":"keyword"
            },
            "ids":{
                "type":"keyword"
            },
            "filename":{
                "type":"keyword"
            },
            "images":{
                "properties":{
                    "imageId":{
                        "type":"long"
                    },
                    "sourceContext":{
                        "type":"text"
                    },
                    "sourceRecordId":{
                        "type":"long"
                    },
                    "imageSubtitle":{
                        "type":"text"
                    }
                }
            },
            "places":{
                "type":"nested",
                "properties":{
                    "name":{
                        "type":"text"
                    },
                    "country":{
                        "type":"keyword"
                    },
                    "region":{
                        "type":"keyword"
                    },
                    "subregion":{
                        "type":"keyword"
                    },
                    "city":{
                        "type":"keyword"
                    },
                    "relation":{
                        "type":"keyword"
                    },
                    "location":{
                        "type":"geo_point"
                    },
                    "gazetteerId":{
                        "type":"long"
                    },
                    "storageFromDay":{
                        "type":"long"
                    },
                    "storageFromMonth":{
                        "type":"long"
                    },
                    "storageFromYear":{
                        "type":"long"
                    },
                    "storageToDay":{
                        "type":"long"
                    },
                    "storageToMonth":{
                        "type":"long"
                    },
                    "storageToYear":{
                        "type":"long"
                    }
                }
            },
            "dates":{
                "properties":{
                    "label":{
                        "type":"text"
                    },
                    "relation":{
                        "type":"text"
                    },
                    "date":{
                        "type":"date"
                    }
                }
            },
            "searchableContent":{
                "type":"text",
                "norms":false,
                "store":true
            },
            "searchableEditorContent":{
                "type":"text",
                "norms":false,
                "store":true
            },
            "boost":{
                "type":"double"
            },
            "suggest":{
                "type":"completion"
            }
        }
    }
}
