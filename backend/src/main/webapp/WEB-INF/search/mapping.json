{
    "entity":{
        "dynamic_templates":[
            {
                "facet_template":{
                    "mapping":{
                        "type":"string",
                        "index":"not_analyzed"
                    },
                    "match":"facet*"
                }
            },
            {
                "all_template":{
                    "mapping":{
                        "type":"string",
                        "index_options":"positions",
                        "copy_to":"searchableContent"
                    },
                    "match":"*",
                    "path_unmatch":"editorSection.*",
                    "match_mapping_type":"string"
                }
            },
            {
                "editor_template":{
                    "mapping":{
                        "type":"string",
                        "index_options":"positions",
                        "copy_to":"searchableEditorContent"
                    },
                    "path_match":"editorSection.*",
                    "match_mapping_type":"string"
                }
            }
        ],
        "properties":{
            "datasetGroup":{
                "type":"string",
                "index":"not_analyzed"
            },
            "@id":{
                "type":"string",
                "index":"not_analyzed"
            },
            "entityId":{
                "type":"long"
            },
            "internalId":{
                "type":"long"
            },
            "lastModified":{
                "type":"long"
            },
            "subtitle":{
                "type":"string",
                "fields":{
                    "sort":{
                        "type":"string",
                        "analyzer":"collation"
                    }
                }
            },
            "thumbnailId":{
                "type":"long"
            },
            "title":{
                "type":"string",
                "fields":{
                    "sort":{
                        "type":"string",
                        "index":"not_analyzed"
                    }
                }
            },
            "type":{
                "type":"string",
                "index":"not_analyzed"
            },
            "ids":{
                "type":"string",
                "index":"not_analyzed"
            },
            "filename":{
                "type":"string",
                "index":"not_analyzed"
            },
            "images":{
                "properties":{
                    "imageId":{
                        "type":"long"
                    },
                    "sourceContext":{
                        "type":"string"
                    },
                    "sourceRecordId":{
                        "type":"long"
                    },
                    "imageSubtitle":{
                        "type":"string"
                    }
                }
            },
            "places":{
                "type": "nested",
                "properties":{
                    "name":{
                        "type":"string"
                    },
                    "relation":{
                        "type":"string"
                    },
                    "location":{
                        "type":"geo_point",
                        "lat_lon":true,
                        "geohash_prefix":true,
                        "geohash_precision":9
                    },
                    "gazetteerId":{
                        "type":"long"
                    },
                    "storageFrom":{
                        "type":"date"
                    },
                    "storageTo":{
                        "type":"date"
                    }
                }
            },
            "dates":{
                "properties":{
                    "label":{
                        "type":"string"
                    },
                    "relation":{
                        "type":"string"
                    },
                    "date":{
                        "type":"date"
                    }
                }
            },
            "searchableContent":{
                "type":"string",
                "omit_norms":true,
                "store":true
            },
            "searchableEditorContent":{
                "type":"string",
                "omit_norms":true,
                "store":true
            },
            "boost":{
                "type":"double"
            },
            "suggest":{
                "type":"completion"
            }
        }
    }
}
