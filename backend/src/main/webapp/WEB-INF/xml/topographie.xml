<?xml version="1.0" encoding="UTF-8"?>

<category name="topographie"
	xmlns="http://arachne.uni-koeln.de/schemas/category"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://arachne.uni-koeln.de/schemas/category category.xsd">
    <display>
        <title>
            <field datasource="topographie.KurzbeschreibungTopographie" />
        </title>
        <subtitle>
             <section>
                <section separator=" / ">
                    <field datasource="topographie.modernerOrt">
                    	<ifEmpty>
                    		<field datasource="ort.Stadt" />
                    	</ifEmpty>
                    </field>
                    <field datasource="topographie.antikerOrt">
                    	<ifEmpty>
                    		<field datasource="ort.Ort_antik" />
                    	</ifEmpty>
                    </field>
                </section>
            </section>
        </subtitle>
        <datasections>
        	<section labelKey="Informationen zur Topographie">
        		<section labelKey="Lokalisierung">
        			<context type="ort" separator=", ">
        				<field datasource=".Stadt"  />
        				<field datasource=".Land" />
        				<field datasource=".Countrycode" />
        				<field datasource=".Aufbewahrungsort" />
        			</context>
        			<section>
        				<field datasource="topographie.antikeGriechLandschaftTopographie" prefix="Antike Landschaft: "/>
        				<field datasource="topographie.antikeRoemProvinzTopographie" prefix="RÃ¶mische Provinz: "/>
        			</section>
        			<section>
        				<field datasource="topographie.Ausdehnung" prefix="Ausdehnung: "/> 
        			</section>
        		</section>
        		<section labelKey="Beschreibung">
	        		<field datasource="topographie.TopographieTypus" prefix="Kategorie: " />
	        		<field datasource="topographie.freieBeschreibung" prefix="Freie Beschreibung: " />
	        	</section>
	        	<section labelKey="Geschichte">
	        		<field datasource="topographie.GeschichteTopographie"  />
	        	</section>
	        	<section labelKey="Ausgrabungen">
	        		<field datasource="topographie.Ausgrabungen"  />
	        	</section>
	            <context type="literatur" labelKey="Literatur" separator=" ">
	            	<field datasource=".DAIRichtlinien" />
	            	<field datasource=".Seite" />
	            </context>
	    	</section>
        </datasections>
    </display>
    <facets>
    	<facet name="kategorie" labelKey="Kategorie">
    		<field datasource="arachneentityidentification.TableName" />
    	</facet>
    	<facet name="ort" labelKey="Lokalisierung">
	    	<context type="ort" separator=", ">
		    	<field datasource=".Stadt" />
		    	<field datasource=".Land" />
	    	</context>
    	</facet>
    	<facet name="datierung-epoche" labelKey="Epoche">
	    	<context type="datierung">
		    	<field datasource=".AnfEpoche"/>
	    	</context>
    	</facet>
    	<facet name="datierung-epoche" labelKey="Epoche">
	    	<context type="datierung">
		    	<field datasource=".EndEpoche"/>
	    	</context>
    	</facet>
    	<facet name="topographietypus" labelKey="Art der Topographie">
	    	<field datasource="topographie.TopographieTypus"/>
    	</facet>
    </facets>
</category>