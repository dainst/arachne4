<?xml version="1.0" encoding="UTF-8"?>
<!-- just very basic to have at least some definitions -->
<category xmlns="http://arachne.uni-koeln.de/schemas/category"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="modell3d"
	xsi:schemaLocation="http://arachne.uni-koeln.de/schemas/category category.xsd">
	<search>
	   <filename>Dateiname</filename>
	</search>
	<display>
		<title>
			<section>
				<field datasource="modell3d.Titel" />
			</section>
		</title>
		<subtitle>
			<section>
				<field datasource="modell3d.Dateiname" />
			</section>
		</subtitle>
		<datasections>
			<section labelKey="Informationen zum Modell">
				<section labelKey="Allgemein">
					<field datasource="modell3d.Dateiname" prefix="Dateiname: " />
					<field datasource="modell3d.Dateiformat" prefix="Dateiformat: " />
					<field datasource="modell3d.DateinameMTL" prefix="Dateiname (Material): " />
				</section>
				<section labelKey="Angaben zum Modell">
					<field datasource="modell3d.Modellierer" prefix="Modellierer: " />
					<field datasource="modell3d.Lizenz" prefix="Lizenz: " />
					<field datasource="modell3d.Modelltyp" prefix="Modelltyp: " />
				</section>
				<section labelKey="Technische Hinweise">
					<field datasource="modell3d.TechnischeHinweise" prefix="" />
				</section>
				<!-- 
				<context type="Modell3DDownloads" labelKey="Download des Modells">
					<linkField labelKey="" datasource=".downloadPath" prefix="https://arachne.dainst.org/data/model/file/" postfix="" />
				</context>
				-->
			</section>
		</datasections>
		<editorsection>
			<section labelKey="Für Bearbeiter">
				<field datasource="modell3d.DatensatzGruppeModell3d" prefix="Datensatz-Gruppe: " />
				<field datasource="modell3d.Pfad" prefix="Pfad: " />
			</section>
		</editorsection>
	</display>
	<facets>
		<include type="facet_kategorie" />
	</facets>
</category>
